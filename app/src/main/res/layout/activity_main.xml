<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="152dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="99dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/searchbar_main"
                android:paddingLeft="16dp"
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="92dp"
                android:layout_height="46dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="showRecipe"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/find_recipe_btn" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cook_with_speaker" />

        <RelativeLayout

            android:id="@+id/a_bus_info_lay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/background_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/speaker_background"
                android:scaleType="centerCrop"
                android:src="@null" />


            <TextView
                android:id="@+id/month_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/background_img"
                android:layout_alignTop="@+id/background_img"
                android:layout_alignEnd="@+id/background_img"

                android:layout_alignRight="@id/background_img"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"

                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="이달의 재료"
                android:textColor="#ff0400ff"
                android:textSize="30dp" />


        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:onClick="checkDataInput"
        android:text="이달의 제철 재료_data input check 용" />
    <!--
    <Button
        android:id="@+id/button"
        android:layout_width="243dp"
        android:layout_height="171dp"
        android:layout_gravity="center_horizontal"
        android:onClick="showIngredient"
        android:text="재료검색" />
 -->

    <ImageButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:onClick="showIngredient"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/search_ingredient_btn" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:onClick="debug_complete"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/community_btn" />
