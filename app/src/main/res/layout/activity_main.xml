<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="152dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="125dp"
                android:layout_height="19dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/searchbar_main"
                android:paddingLeft="23dp"
                android:textColor="@android:color/background_dark" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="showRecipe"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/find_recipe_btn" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/month_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="이달의 재료"
        android:textColor="#ff0400ff"
        android:textSize="30dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:onClick="checkDataInput"
        android:text="이달의 제철 재료_data input check 용" />
    <!--
    <Button
        android:id="@+id/button"
        android:layout_width="243dp"
        android:layout_height="171dp"
        android:layout_gravity="center_horizontal"
        android:onClick="showIngredient"
        android:text="재료검색" />
 -->

    <ImageButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:onClick="showIngredient"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/search_ingredient_btn" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/transparent"
        android:onClick="debug_complete"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/community_btn" />
    <!--
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="debug_complete"
        android:text="커뮤니티(미구현)" />

 -->

</LinearLayout>